/* 开关样式 */
.switch {
  position: relative;
  width: 100rpx;
  height: 60rpx;
  background: #e0e0e0;
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.switch.active {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
}

.switch::after {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 52rpx;
  height: 52rpx;
  background: #ffffff;
  border-radius: 50%;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.switch.active::after {
  transform: translateX(40rpx);
}