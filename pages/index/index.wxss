/* pages/index/index.wxss */

/* 容器样式 */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 导航栏样式 */
.nav-bar {
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.nav-title {
  z-index: 1;
}

.nav-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 0.5rpx;
}

.nav-actions {
  z-index: 1;
}

.nav-btn {
  width: 56rpx;
  height: 56rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-btn:active {
  background: #e9ecef;
}

.nav-btn-icon {
  font-size: 28rpx;
  color: #666666;
}

/* 主要内容区域 */
.main-content {
  padding: 20rpx 24rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 动态问候天气组件样式 */
greeting-weather {
  display: block;
  margin-bottom: 32rpx;
}

/* 核心数据展示样式 */
.core-stats {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  display: flex;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
  align-items: stretch;
}

.primary-stat {
  flex: 1;
  position: relative;
  padding: 24rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  border-radius: 20rpx;
  color: #ffffff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 140rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 500;
  display: block;
}

.stat-icon {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 32rpx;
  opacity: 0.3;
}

.secondary-stats {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  height: 100%;
}

.mini-stat {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  flex: 1;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 0;
}

.mini-stat:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.mini-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 4rpx;
  display: block;
}

.mini-label {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
  display: block;
}

/* 快捷操作区域样式 */
.quick-actions {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 0.5rpx;
}


.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.action-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.action-card.primary::before {
  background: linear-gradient(90deg, #ff6b9d, #fa709a);
}

.action-card.secondary::before {
  background: linear-gradient(90deg, #4facfe, #00f2fe);
}

.action-card.tertiary::before {
  background: linear-gradient(90deg, #43e97b, #38f9d7);
}

.action-card.quaternary::before {
  background: linear-gradient(90deg, #fa709a, #fee140);
}

.action-card:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  display: block;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.action-icon-linear {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  display: block;
  color: #666666;
}

.action-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  letter-spacing: 0.5rpx;
}

/* 动态信息区域样式 */
.dynamic-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  width: 100%;
  box-sizing: border-box;
}

.info-card.warning {
  border-left: 4rpx solid #fa709a;
  background: linear-gradient(135deg, #ffffff 0%, #fef7f7 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 0.5rpx;
}

.card-more {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

.warning-badge {
  background: linear-gradient(135deg, #fa709a 0%, #ff6b9d 100%);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 700;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 活动列表样式 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx 0;
  position: relative;
}

.activity-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx;
  right: 0;
  height: 1rpx;
  background: #f0f0f0;
}

.activity-dot {
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 50%;
  margin-top: 8rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.activity-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
}

.activity-time {
  font-size: 22rpx;
  color: #999999;
  font-weight: 400;
}

/* 库存预警列表样式 */
.warning-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.warning-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(250, 112, 154, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(250, 112, 154, 0.1);
}

.warning-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
  flex: 1;
}

.warning-stock {
  font-size: 24rpx;
  color: #fa709a;
  font-weight: 600;
}

/* 动画效果 */
.fade-in {
  animation: fadeInUp 0.8s ease-out forwards;
  opacity: 0;
  transform: translateY(30rpx);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 欢迎卡片样式 */
.welcome-card {
  margin: 10rpx; /* 从20rpx减小到10rpx */
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border: none;
  position: relative;
  z-index: 2;
}

.welcome-content {
  display: flex;
  justify-content: space-between;
