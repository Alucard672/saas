/* pages/customer-edit/customer-edit.wxss */

.container {
  height: 100vh;
  overflow-y: auto;
  box-sizing: border-box;
  padding-top: 120rpx;
  background: #f8f9fa;
}

.main-content {
  padding: 20rpx;
  margin: 0 auto;
  max-width: 750rpx;
  box-sizing: border-box;
}

/* 导航栏样式 */
.nav-bar {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  padding: 60rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  overflow: hidden;
}

.nav-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
  opacity: 0.3;
}

.nav-title {
  display: flex;
  align-items: center;
  z-index: 1;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.nav-text {
  font-size: 36rpx;
  font-weight: 600;
}

.nav-actions {
  z-index: 1;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

/* 表单区域样式 */
.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
}

/* 表单卡片样式 */
.form-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  width: 160rpx;
  flex-shrink: 0;
  padding-top: 16rpx;
}

.form-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #333333;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #ff6b9d;
  background: #ffffff;
}

.form-textarea {
  flex: 1;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333333;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #ff6b9d;
  background: #ffffff;
}

.form-picker {
  flex: 1;
}

.picker-content {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.picker-content:active {
  background: #e9ecef;
}

.payment-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  border-radius: 4rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
  padding: 0 10rpx;
}

.cancel-btn {
  flex: 1;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.cancel-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.cancel-btn-text {
  font-size: 32rpx;
  color: #666666;
  font-weight: 500;
}

.save-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 157, 0.4);
}

.save-btn-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
}