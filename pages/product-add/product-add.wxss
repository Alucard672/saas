/* pages/product-add/product-add.wxss */

/* 基础容器 */
.container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 16rpx;
  padding-bottom: 0;
}

/* 区域样式 */
.section {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
  letter-spacing: 0.5rpx;
}

/* 核心信息区域 */
.core-section {
  border-left: 4rpx solid #2196f3;
}

/* 表单组件 */
.form-group {
  margin-bottom: 24rpx;
}

.form-group.half {
  flex: 1;
}

.form-row {
  display: flex;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 500;
  text-align: left;
  display: flex;
  align-items: center;
}

.form-label.required::after {
  content: '*';
  color: #f44336;
  margin-left: 4rpx;
  font-size: 24rpx;
}

.form-label.price-label {
  color: #2196f3;
  font-weight: 600;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #2196f3;
  box-shadow: 0 0 0 4rpx rgba(33, 150, 243, 0.1);
}

.form-input.error {
  border-color: #f44336;
  box-shadow: 0 0 0 4rpx rgba(244, 67, 54, 0.1);
}

.form-input::placeholder {
  color: #999999;
}

/* 价格输入框 */
.price-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.currency-symbol {
  position: absolute;
  left: 16rpx;
  font-size: 28rpx;
  color: #2196f3;
  font-weight: 600;
  z-index: 1;
}

.price-input {
  padding-left: 48rpx !important;
  font-weight: 600;
  color: #2196f3;
}

/* 选择器样式 */
.form-picker {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
}

.form-picker.error {
  border-color: #f44336;
  box-shadow: 0 0 0 4rpx rgba(244, 67, 54, 0.1);
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.picker-text.placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 20rpx;
  color: #666666;
  transition: transform 0.3s ease;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: #f44336;
  margin-top: 8rpx;
  margin-left: 4rpx;
}

/* 图片上传区域 */
.image-section {
  border-left: 4rpx solid #4caf50;
}

.image-preview-area {
  min-height: 200rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.upload-placeholder:active {
  background: #f0f0f0;
  border-color: #2196f3;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.upload-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #f44336;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.3);
}

.delete-icon {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.add-image-btn:active {
  background: #f0f0f0;
  border-color: #2196f3;
}

.add-icon {
  font-size: 48rpx;
  color: #999999;
  font-weight: 300;
}

/* 商品详情区域 */
.detail-section {
  border-left: 4rpx solid #ff9800;
}

.editor-container {
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
  background: #ffffff;
}

.rich-editor {
  width: 100%;
  min-height: 300rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

/* 底部占位空间 */
.bottom-spacer {
  height: 120rpx;
}

/* 固定底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 1rpx solid #e0e0e0;
  padding: 16rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 1000;
}

.action-buttons {
  display: flex;
  gap: 12rpx;
}

/* 按钮样式 */
.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.4);
}

.btn-primary.loading {
  background: #bbbbbb;
  box-shadow: none;
}

.btn-secondary {
  background: #ffffff;
  color: #666666;
  border: 2rpx solid #e0e0e0;
}

.btn-secondary:active {
  background: #f5f5f5;
  border-color: #cccccc;
}

.btn-reset {
  background: #ffffff;
  color: #ff9800;
  border: 2rpx solid #ff9800;
}

.btn-reset:active {
  background: rgba(255, 152, 0, 0.1);
}

/* 图片上传弹窗 */
.image-upload-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999999;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: #f0f0f0;
}

.modal-body {
  padding: 24rpx;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 240rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  background: #f0f0f0;
  border-color: #2196f3;
}

.upload-icon-large {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.upload-title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.upload-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.upload-limit {
  font-size: 24rpx;
  color: #999999;
}

.selected-images {
  margin-top: 24rpx;
}

.selected-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.selected-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.selected-item {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.selected-preview {
  width: 100%;
  height: 100%;
}

.selected-delete {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 28rpx;
  height: 28rpx;
  background: #f44336;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 18rpx;
  font-weight: bold;
}

.modal-footer {
  padding: 16rpx 24rpx 24rpx;
  border-top: 1rpx solid #e0e0e0;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .main-content {
    padding: 12rpx;
  }
  
  .section {
    padding: 20rpx;
    margin-bottom: 12rpx;
  }
  
  .form-row {
    flex-direction: column;
    gap: 0;
  }
  
  .form-group.half {
    margin-bottom: 24rpx;
  }
  
  .image-item,
  .add-image-btn {
    width: 140rpx;
    height: 140rpx;
  }
  
  .bottom-actions {
    padding: 12rpx;
  }
  
  .btn {
    height: 80rpx;
    font-size: 26rpx;
  }
}

/* 8px网格系统 */
.grid-8 { margin: 16rpx; }
.grid-16 { margin: 32rpx; }
.grid-24 { margin: 48rpx; }

.padding-8 { padding: 16rpx; }
.padding-16 { padding: 32rpx; }
.padding-24 { padding: 48rpx; }

.gap-8 { gap: 16rpx; }
.gap-16 { gap: 32rpx; }
.gap-24 { gap: 48rpx; }

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 无障碍支持 */
.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.form-input:disabled {
  background: #f5f5f5;
  color: #999999;
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #121212;
  }
  
  .section {
    background: #1e1e1e;
    border-color: #333333;
  }
  
  .section-title {
    color: #ffffff;
    border-bottom-color: #333333;
  }
  
  .form-label {
    color: #e0e0e0;
  }
  
  .form-input {
    background: #2c2c2c;
    border-color: #444444;
    color: #ffffff;
  }
  
  .form-picker {
    background: #2c2c2c;
    border-color: #444444;
  }
  
  .picker-text {
    color: #ffffff;
  }
  
  .bottom-actions {
    background: #1e1e1e;
    border-top-color: #333333;
  }
}