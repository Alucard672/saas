/* pages/product-edit/product-edit.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

.main-content {
  padding: 20rpx;
  margin: 0 auto;
  max-width: 750rpx;
  box-sizing: border-box;
}

/* 原始数据参考区域 */
.reference-section {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.reference-header {
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.reference-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.reference-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.reference-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.reference-item {
  display: flex;
  align-items: center;
}

.reference-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.reference-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.reference-value.price {
  color: #ff6b6b;
  font-weight: 600;
}

/* 表单容器 */
.form-container {
  height: calc(100vh - 240rpx);
  padding: 0 20rpx;
}

/* 表单区块 */
.form-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.section-header {
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

/* 表单组件 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group.half {
  width: 48%;
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.form-input.error {
  border-color: #ff4757;
  background: #fff5f5;
}

.form-input.price-input {
  text-align: right;
  font-weight: 600;
  color: #ff6b6b;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.form-picker.error {
  border-color: #ff4757;
  background: #fff5f5;
}

.picker-display {
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #ff4757;
  margin-top: 8rpx;
  display: block;
}

/* 价格行布局 */
.price-row {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

/* 利润显示 */
.profit-display {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 24rpx;
  border: 2rpx solid #e9ecef;
}

.profit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.profit-item:last-child {
  margin-bottom: 0;
}

.profit-label {
  font-size: 28rpx;
  color: #666;
}

.profit-value {
  font-size: 28rpx;
  font-weight: 600;
}

.profit-value.positive {
  color: #2ed573;
}

.profit-value.negative {
  color: #ff4757;
}

/* 库存行布局 */
.stock-row {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

/* 图片上传区域 */
.image-upload-area {
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.3);
}

.image-upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.image-upload-btn:active {
  background: #e9ecef;
  border-color: #667eea;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-top: 2rpx solid #f0f0f0;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.action-btn.primary.loading {
  background: #ccc;
  color: #999;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.action-btn.secondary:active {
  background: #e9ecef;
  transform: translateY(2rpx);
}

.action-btn.tertiary {
  background: #fff3cd;
  color: #856404;
  border: 2rpx solid #ffeaa7;
}

.action-btn.tertiary:active {
  background: #ffeaa7;
  transform: translateY(2rpx);
}

/* 底部安全区域 */
.bottom-safe-area {
  height: 40rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .price-row,
  .stock-row {
    flex-direction: column;
    gap: 0;
  }
  
  .form-group.half {
    width: 100%;
  }
  
  .image-item,
  .image-upload-btn {
    width: calc(50% - 8rpx);
    height: 160rpx;
  }
}