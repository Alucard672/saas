/* pages/sales/sales.wxss */

/* 容器样式 */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  display: flex;
  flex-direction: column;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 30rpx 20rpx 20rpx;
  flex-shrink: 0;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666666;
  opacity: 0.8;
}

.main-content {
  flex: 1;
  padding: 20rpx 24rpx 0;
  height: 100%;
  box-sizing: border-box;
}

/* 搜索和筛选区域 */
.search-filter-section {
  margin-bottom: 24rpx;
  flex-shrink: 0;
}

.search-container {
  margin-bottom: 20rpx;
}

.search-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.search-icon {
  font-size: 28rpx;
  color: #999999;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  background: transparent;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 12rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.filter-tab {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.filter-tab.active {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  border-color: rgba(255, 107, 157, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.2);
}

.tab-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
  transition: color 0.3s ease;
}

.filter-tab.active .tab-text {
  color: #ffffff;
}

/* 统计概览 */
.stats-overview {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  flex-shrink: 0;
}

.overview-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
  position: relative;
  overflow: hidden;
}

.overview-card.primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b9d, #fa709a);
  border-radius: 20rpx 20rpx 0 0;
}

.overview-icon {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

.overview-content {
  flex: 1;
}

.overview-number {
  font-size: 36rpx;
  font-weight: 800;
  color: #333333;
  margin-bottom: 4rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.overview-mini {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
}

.mini-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 16rpx;
  flex: 1;
  transition: all 0.3s ease;
}

.mini-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 4rpx;
}

.mini-label {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
}

/* 销售单列表区域 */
.sales-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 0.5rpx;
}

.section-count {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

/* 销售单列表 */
.sales-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-bottom: 40rpx;
}

/* 销售单项容器 */
.sale-item-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 销售单主体 */
.sale-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 2;
  width: 100%;
  box-sizing: border-box;
}

.sale-item.swiped {
  transform: translateX(-160rpx);
}

.sale-item:active {
  transform: translateY(2rpx) scale(0.98);
}

.sale-item.swiped:active {
  transform: translateX(-160rpx) translateY(2rpx) scale(0.98);
}

/* 状态指示器 */
.status-indicator {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.status-indicator.normal {
  background: linear-gradient(90deg, #43e97b, #38f9d7);
}

.status-indicator.warning {
  background: linear-gradient(90deg, #fa709a, #fee140);
}

.status-indicator.danger {
  background: linear-gradient(90deg, #ff6b9d, #fa709a);
}

/* 销售单内容 */
.sale-content {
  width: 100%;
}

/* 销售单头部 */
.sale-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.sale-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.sale-icon {
  font-size: 28rpx;
  color: #ffffff;
}

.sale-basic {
  flex: 1;
  min-width: 0;
}

.sale-order {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 4rpx;
  display: block;
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sale-customer {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  display: block;
  margin-bottom: 2rpx;
}

.sale-phone {
  font-size: 22rpx;
  color: #999999;
  display: block;
}

.sale-status {
  flex-shrink: 0;
}

.status-text {
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.status-text.completed {
  background: rgba(67, 233, 123, 0.1);
  color: #43e97b;
}

.status-text.pending {
  background: rgba(250, 112, 154, 0.1);
  color: #fa709a;
}

.status-text.cancelled {
  background: rgba(255, 107, 157, 0.1);
  color: #ff6b9d;
}

/* 销售单信息 */
.sale-info {
  margin-top: 16rpx;
}

.info-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-item {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.info-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #333333;
}

.info-value.price {
  color: #43e97b;
}

/* 支付方式样式 */
.payment-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.payment-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

/* 左滑操作按钮 */
.swipe-actions {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 160rpx;
  display: flex;
  z-index: 1;
  transform: translateX(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.swipe-actions.show {
  transform: translateX(0);
}

.swipe-actions .action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  color: #ffffff;
  font-weight: 600;
  transition: all 0.3s ease;
}

.swipe-actions .action-btn.edit {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.swipe-actions .action-btn.delete {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
}

.swipe-actions .action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.swipe-actions .action-icon {
  font-size: 32rpx;
}

.swipe-actions .action-text {
  font-size: 22rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
  flex: 1;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.empty-action {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.empty-action:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 底部安全区域 */
.bottom-safe-area {
  height: 40rpx;
  flex-shrink: 0;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 157, 0.4), 0 4rpx 16rpx rgba(255, 107, 157, 0.2);
  z-index: 1000;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.fab:active {
  transform: scale(0.92);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.6), 0 2rpx 8rpx rgba(255, 107, 157, 0.4);
}

.fab-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

/* 动画效果 */
.fade-in {
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  opacity: 0;
  transform: translateY(20rpx);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .main-content {
    padding: 16rpx 20rpx 0;
  }
  
  .sale-item {
    padding: 20rpx;
  }
  
  .fab {
    width: 100rpx;
    height: 100rpx;
    bottom: 100rpx;
    right: 30rpx;
  }
  
  .fab-icon {
    font-size: 40rpx;
  }
}