/* pages/order-manage/order-manage.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  padding-bottom: 120rpx;
}

/* 顶部操作栏 */
.header-actions {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-type-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  padding: 4rpx;
}

.tab-item {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: rgba(255, 255, 255, 0.9);
  color: #ff6b9d;
  font-weight: 600;
}

.add-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #ff6b9d;
  padding: 12rpx 20rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.add-btn .icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 筛选栏 */
.filter-bar {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  gap: 20rpx;
  align-items: center;
  flex-wrap: wrap;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.filter-item .arrow {
  font-size: 20rpx;
  color: #999;
}

.search-box {
  flex: 1;
  position: relative;
  min-width: 200rpx;
}

.search-box input {
  width: 100%;
  padding: 12rpx 40rpx 12rpx 16rpx;
  background: #f8f9fa;
  border: none;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.search-icon {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

/* 订单列表 */
.order-list {
  flex: 1;
  padding: 0 20rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: rgba(255, 255, 255, 0.8);
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-action {
  background: rgba(255, 255, 255, 0.9);
  color: #ff6b9d;
  padding: 16rpx 32rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: inline-block;
}

/* 订单项容器 */
.order-item-area {
  position: relative;
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.order-item-wrapper {
  width: 100%;
  height: auto;
}

.order-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-right: 20rpx; /* 修复右边距问题 */
}

/* 左滑操作按钮 */
.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 0 16rpx 16rpx 0;
}

.swipe-actions .action-btn {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  min-width: 120rpx;
}

.swipe-actions .action-btn.edit {
  background: #007bff;
}

.swipe-actions .action-btn.delete {
  background: #dc3545;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-info {
  flex: 1;
}

.order-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.order-date {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-confirmed {
  background: #d1ecf1;
  color: #0c5460;
}

.status-completed {
  background: #d4edda;
  color: #155724;
}

.status-cancelled {
  background: #f8d7da;
  color: #721c24;
}

/* 客户/供应商信息 */
.partner-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.partner-label {
  color: #666;
  margin-right: 8rpx;
}

.partner-name {
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}

.contact-info {
  color: #999;
  font-size: 24rpx;
}

/* 商品信息 */
.products-info {
  margin-bottom: 16rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.product-name {
  flex: 1;
  color: #333;
  margin-right: 12rpx;
}

.product-spec {
  color: #999;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.product-quantity {
  color: #666;
  margin-right: 12rpx;
  min-width: 60rpx;
}

.product-price {
  color: #ff6b9d;
  font-weight: 600;
  min-width: 80rpx;
  text-align: right;
}

.more-products {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx 0;
}

/* 订单金额 */
.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.amount-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b9d;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  min-width: 60rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  color: white;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.action-btn.success {
  background: #28a745;
  color: white;
}

.action-btn.danger {
  background: #dc3545;
  color: white;
}

/* 加载状态 */
.load-more, .no-more {
  text-align: center;
  padding: 40rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
}

/* 底部统计 */
.bottom-stats {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid rgba(255, 107, 157, 0.1);
}

.stat-item {
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b9d;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .filter-bar {
    flex-direction: column;
    align-items: stretch;
  }
  
  .search-box {
    min-width: auto;
  }
  
  .order-actions {
    flex-wrap: wrap;
  }
  
  .bottom-stats {
    flex-wrap: wrap;
  }
  
  .stat-item {
    flex: 1;
    min-width: 50%;
    margin-bottom: 8rpx;
  }
}