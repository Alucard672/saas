/* pages/customers/customers.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

/* 主要内容区域 */
.main-content {
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666666;
  opacity: 0.8;
}

/* 统计卡片 */
.stats-section {
  margin-bottom: 20rpx;
}

.stats-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #fa709a;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666666;
}

/* 搜索和筛选区域 */
.search-section {
  margin-bottom: 20rpx;
}

.search-bar {
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: white;
  border-radius: 40rpx;
  padding: 0 50rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(250, 112, 154, 0.1);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #fa709a;
}

.filter-tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: white;
  font-weight: 600;
}

/* 客户列表 */
.customers-section {
  margin-bottom: 120rpx;
}

.customer-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(250, 112, 154, 0.1);
  transition: all 0.3s ease;
}

.customer-card.swiped .customer-content {
  transform: translateX(-160rpx);
}

.customer-content {
  padding: 30rpx;
  transition: transform 0.3s ease;
  background: white;
  position: relative;
  z-index: 2;
}

.customer-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.customer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.customer-info {
  flex: 1;
}

.customer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

.customer-phone {
  font-size: 26rpx;
  color: #666666;
}

.customer-level {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  white-space: nowrap;
}

.level-vip {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  color: #d63031;
}

.level-regular {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  color: white;
}

.level-inactive {
  background: linear-gradient(135deg, #ddd 0%, #bbb 100%);
  color: #666;
}

.customer-details {
  space-y: 12rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

.detail-value.amount {
  color: #fa709a;
  font-weight: 600;
}

/* 滑动操作按钮 */
.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  z-index: 1;
}

.action-btn {
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.edit-btn {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
}

.delete-btn {
  background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  display: block;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
  display: block;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(250, 112, 154, 0.4);
  z-index: 999;
}

.add-icon {
  font-size: 48rpx;
  color: white;
  font-weight: 300;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-card {
    padding: 20rpx;
  }
  
  .stats-number {
    font-size: 28rpx;
  }
  
  .stats-label {
    font-size: 22rpx;
  }
  
  .customer-content {
    padding: 20rpx;
  }
  
  .customer-name {
    font-size: 28rpx;
  }
  
  .customer-avatar {
    width: 60rpx;
    height: 60rpx;
    font-size: 28rpx;
  }
}

/* 动画效果 */
.customer-card:active {
  transform: scale(0.98);
}

.add-btn:active {
  transform: scale(0.95);
}

.filter-tab:active {
  transform: scale(0.98);
}