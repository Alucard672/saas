/* pages/unit-manage/unit-manage.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.main-content {
  flex: 1;
  padding: 0 24rpx;
  overflow: hidden;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.add-btn,
.conversion-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
}

.add-btn:active,
.conversion-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.add-icon,
.conversion-icon {
  margin-right: 6rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 标签页 */
.tab-container {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
}

.tab-item.active {
  color: #4facfe;
  border-bottom-color: #4facfe;
  font-weight: 600;
}

/* 内容区域 */
.content-area {
  flex: 1;
  padding: 24rpx;
}

/* 单位网格 */
.unit-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.unit-card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.unit-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}

.unit-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 32rpx;
}

.unit-info {
  flex: 1;
  margin-right: 24rpx;
}

.unit-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.unit-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.unit-symbol {
  font-size: 24rpx;
  color: #4facfe;
  background: rgba(79, 172, 254, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.base-badge {
  font-size: 20rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

.unit-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.unit-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 24rpx;
}

.edit-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.delete-btn {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.action-btn:active {
  transform: scale(0.95);
}

.unit-footer {
  padding: 0 32rpx 32rpx;
  border-top: 1rpx solid #f8f9fa;
  background: #fafbfc;
}

.unit-stats {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #999;
}

/* 换算关系区域 */
.conversion-section {
  margin-top: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.section-count {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.conversion-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.conversion-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.conversion-content {
  flex: 1;
}

.conversion-formula {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.from-unit {
  color: #4facfe;
}

.equals {
  margin: 0 16rpx;
  color: #666;
}

.to-unit {
  color: #52c41a;
}

.conversion-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.conversion-time {
  font-size: 22rpx;
  color: #999;
}

.delete-conversion-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #ff4d4f;
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.delete-conversion-btn:active {
  background: #d9363e;
}

.delete-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state,
.empty-conversion {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.3);
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafbfc;
  transition: all 0.3s ease;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #4facfe;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(79, 172, 254, 0.1);
}

.form-input.error,
.form-textarea.error {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.form-textarea {
  height: 120rpx;
  resize: none;
}

.form-picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  background: #fafbfc;
}

.form-picker.error {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.picker-display {
  font-size: 28rpx;
  color: #333;
}

.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.unit-switch {
  transform: scale(0.8);
}

.switch-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.input-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.error-text {
  display: block;
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 8rpx;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e1e5e9;
}

.btn-secondary:active {
  background: #e9ecef;
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-primary.loading {
  opacity: 0.6;
}

.btn:disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .unit-grid {
    grid-template-columns: 1fr;
  }
  
  .page-header {
    padding: 24rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .header-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .add-btn,
  .conversion-btn {
    padding: 8rpx 16rpx;
    font-size: 22rpx;
  }
  
  .unit-header {
    padding: 24rpx;
  }
  
  .unit-name {
    font-size: 28rpx;
  }
  
  .modal-content {
    margin: 16rpx;
  }
}