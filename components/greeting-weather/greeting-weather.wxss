/* 动态问候天气组件样式 */
.greeting-weather-container {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: #333333;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

/* 主要内容区域：问候语和天气信息在同一行 */
.main-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

/* 问候语部分 */
.greeting-section {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  min-width: 0;
}

.greeting-text {
  flex: 1;
  min-width: 0;
}

.greeting-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.2;
}

.greeting-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 300;
  line-height: 1.3;
}

.greeting-icon {
  font-size: 50rpx;
  flex-shrink: 0;
  animation: float 3s ease-in-out infinite;
}

/* 天气信息部分 - 与问候语同行 */
.weather-section {
  flex-shrink: 0;
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 107, 157, 0.2);
  min-width: 200rpx;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
}

.weather-main {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.weather-icon {
  font-size: 40rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.weather-info {
  flex: 1;
  min-width: 0;
}

.temperature {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.1;
  margin-bottom: 4rpx;
}

.weather-desc {
  display: block;
  font-size: 20rpx;
  opacity: 0.9;
  text-transform: capitalize;
  line-height: 1.2;
}

/* 内联天气详情区域 */
.weather-details-inline {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.weather-detail-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  flex: 1;
  justify-content: center;
}

.weather-detail-icon {
  font-size: 20rpx;
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
}

.weather-detail-value {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 加载状态 */
.weather-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 24rpx;
  color: #666666;
  opacity: 0.9;
}

/* 错误状态 */
.weather-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.error-text {
  font-size: 24rpx;
  color: #666666;
  opacity: 0.9;
  text-align: center;
}

.retry-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #fa709a 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 22rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.3);
}

.retry-btn:active {
  background: linear-gradient(135deg, #fa709a 0%, #ff6b9d 100%);
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 淡入动画 */
.greeting-weather-container {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .main-content {
    flex-direction: column;
    align-items: stretch;
    gap: 20rpx;
  }
  
  .weather-section {
    min-width: auto;
  }
  
  .greeting-title {
    font-size: 38rpx;
  }
  
  .greeting-subtitle {
    font-size: 22rpx;
  }
}