/* 线性图标组件 - 优化版样式 */
.linear-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 尺寸定义 - 增加更多尺寸选项 */
.linear-icon.small {
  width: 32rpx;
  height: 32rpx;
}

.linear-icon.medium {
  width: 48rpx;
  height: 48rpx;
}

.linear-icon.large {
  width: 64rpx;
  height: 64rpx;
}

.linear-icon.xlarge {
  width: 80rpx;
  height: 80rpx;
}

/* 图标形状基础样式 - 增强视觉效果 */
.icon-shape {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
}

.icon-shape::before,
.icon-shape::after {
  content: '';
  position: absolute;
  border-radius: 0;
  transition: all 0.2s ease;
}

/* 线条粗细 - 优化视觉层次 */
.linear-icon.thin .icon-shape::before,
.linear-icon.thin .icon-shape::after {
  border-width: 1rpx;
}

.linear-icon.regular .icon-shape::before,
.linear-icon.regular .icon-shape::after {
  border-width: 2rpx;
}

.linear-icon.medium .icon-shape::before,
.linear-icon.medium .icon-shape::after {
  border-width: 3rpx;
}

.linear-icon.bold .icon-shape::before,
.linear-icon.bold .icon-shape::after {
  border-width: 4rpx;
}

/* 颜色主题 - 增强色彩系统 */
.linear-icon.primary {
  color: #007aff;
}

.linear-icon.secondary {
  color: #6c757d;
}

.linear-icon.success {
  color: #34c759;
}

.linear-icon.warning {
  color: #ff9500;
}

.linear-icon.danger {
  color: #ff3b30;
}

.linear-icon.muted {
  color: #8e8e93;
}

.linear-icon.white {
  color: #ffffff;
}

.linear-icon.dark {
  color: #1c1c1e;
}

.linear-icon .icon-shape::before,
.linear-icon .icon-shape::after {
  border-color: currentColor;
}

