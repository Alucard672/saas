/* 交互状态增强 */
.linear-icon.clickable {
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.linear-icon.clickable:hover {
  transform: scale(1.1);
  filter: brightness(1.2);
}

.linear-icon.clickable:active {
  transform: scale(0.95);
  transition: all 0.1s ease;
}

.linear-icon.disabled {
  opacity: 0.3;
  pointer-events: none;
  filter: grayscale(100%);
}

/* 动画效果增强 */
.linear-icon.spin {
  animation: spin 2s linear infinite;
}

.linear-icon.pulse {
  animation: pulse 2s ease-in-out infinite;
}

.linear-icon.bounce {
  animation: bounce 1s ease-in-out infinite;
}

.linear-icon.shake {
  animation: shake 0.5s ease-in-out;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { 
    opacity: 1; 
    transform: scale(1);
  }
  50% { 
    opacity: 0.7; 
    transform: scale(1.05);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-6rpx);
  }
  60% {
    transform: translateY(-3rpx);
  }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-2rpx); }
  20%, 40%, 60%, 80% { transform: translateX(2rpx); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .linear-icon.large {
    width: 56rpx;
    height: 56rpx;
  }
  
  .linear-icon.xlarge {
    width: 72rpx;
    height: 72rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .linear-icon.primary {
    color: #0a84ff;
  }
  
  .linear-icon.secondary {
    color: #8e8e93;
  }
  
  .linear-icon.success {
    color: #30d158;
  }
  
  .linear-icon.warning {
    color: #ff9f0a;
  }
  
  .linear-icon.danger {
    color: #ff453a;
  }
}


/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .linear-icon .icon-shape::before,
  .linear-icon .icon-shape::after {
    border-width: 3rpx;
  }
  
  .linear-icon.thin .icon-shape::before,
  .linear-icon.thin .icon-shape::after {
    border-width: 2rpx;
  }
}
