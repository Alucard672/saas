/* components/dynamic-attributes/dynamic-attributes.wxss */
.dynamic-attributes {
  padding: 20rpx;
}

.no-attributes {
  text-align: center;
  padding: 80rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx dashed #ddd;
}

.no-attributes-text {
  font-size: 28rpx;
  color: #999;
}

.attribute-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.attribute-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.required-mark {
  color: #dc3545;
  font-size: 32rpx;
  margin-left: 8rpx;
}

.attribute-input {
  margin-bottom: 16rpx;
}

/* 文本和数字输入 */
.text-input, .number-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.text-input.error, .number-input.error {
  border-color: #dc3545;
  background: #fff5f5;
}

/* 选择器 */
.select-picker, .date-picker {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.select-picker.error, .date-picker.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.picker-display {
  font-size: 28rpx;
  color: #333;
}

/* 复选框组 */
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.checkbox-group.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: white;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
}

.checkbox-text {
  font-size: 26rpx;
  color: #333;
}

/* 布尔开关 */
.boolean-switch {
  transform: scale(1.2);
}

/* 颜色选择器 */
.color-selector {
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.color-selector.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 3rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
}

.color-option.selected {
  border-color: #667eea;
  border-width: 4rpx;
  transform: scale(1.1);
}

.color-check {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.selected-color-display {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
}

.selected-color-text {
  font-size: 26rpx;
  color: #666;
}

.selected-color-preview {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
}

.selected-color-value {
  font-size: 24rpx;
  color: #333;
  font-family: monospace;
}

/* 尺寸选择器 */
.size-selector {
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.size-selector.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.size-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.size-option {
  padding: 16rpx 24rpx;
  background: white;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.size-option.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: #667eea;
  transform: translateY(-2rpx);
}

.size-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 图片上传 */
.image-upload {
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  background: #f8f9fa;
  overflow: hidden;
}

.image-upload.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.image-preview {
  position: relative;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.btn-reselect {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
}

.image-placeholder {
  padding: 60rpx 20rpx;
  text-align: center;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  cursor: pointer;
}

.upload-icon {
  font-size: 60rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

.no-image-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误提示 */
.error-text {
  display: block;
  font-size: 24rpx;
  color: #dc3545;
  margin-top: 8rpx;
  padding-left: 8rpx;
}

/* 属性说明 */
.attribute-description {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  padding-left: 8rpx;
  font-style: italic;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .color-options {
    gap: 12rpx;
  }
  
  .color-option {
    width: 50rpx;
    height: 50rpx;
  }
  
  .size-options {
    gap: 12rpx;
  }
  
  .size-option {
    padding: 12rpx 20rpx;
  }
}